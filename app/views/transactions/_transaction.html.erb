<div id="<%= dom_id transaction %>">
  <div>
    <strong>Title:</strong>
    <%= transaction.title %>
  </div>

  <div>
    <strong>amount:</strong>
    <%= "R$#{transaction.amount.round(2)}" %>
  </div>

  <div>
    <strong>Payment date:</strong>
    <%= transaction.payment_date&.strftime("%Y-%m-%d %H:%M:%S") %>
  </div>

  <div>
    <strong>Until date:</strong>
    <%= transaction.until_date&.strftime("%Y-%m-%d %H:%M:%S") %>
  </div>

  <div>
    <strong>Recurring:</strong>
    <%= transaction.recurring %>
  </div>

  <div>
    <strong>Recurrence:</strong>
    <%= transaction.recurrence %>
  </div>

  <div>
    <strong>Status:</strong>
    <%= transaction.status %>
  </div>

  <div>
    <strong>Comment:</strong>
    <%= transaction.comment %>
  </div>

</div>
