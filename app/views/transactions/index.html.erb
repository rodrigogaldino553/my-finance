<div class="pb-5">
  <h1 class="visually-hidden">Transactions</h1>
  
  <div class="row mb-4">
    <div class="col-12">
        <div class="card bg-success text-white shadow-sm border-0 rounded-4">
            <div class="card-body text-center py-4">
                <small class="opacity-75">Total Balance</small>
                <h2 class="display-5 fw-bold mb-0">R$ <%= number_with_precision(@transactions.sum(&:amount), precision: 2) %></h2>
            </div>
        </div>
    </div>
  </div>

  <div id="transactions">
    <% if @transactions.empty? %>
      <div class="text-center py-5">
        <i class="bi bi-inbox fs-1 text-secondary d-block mb-3"></i>
        <h3 class="text-secondary mb-2">No transactions yet</h3>
        <p class="text-muted mb-4">Start tracking your finances by adding your first transaction</p>
        <%= link_to new_transaction_path, class: "btn btn-success btn-lg rounded-pill shadow" do %>
          <i class="bi bi-plus-lg me-2"></i>Add Transaction
        <% end %>
      </div>
    <% else %>
      <% @transactions.group_by { |t| t.payment_date || Date.today }.each do |date, transactions| %>
        <div class="mb-3">
          <h6 class="text-secondary text-uppercase fw-bold ms-1 mb-2 small">
              <%= date == Date.today ? 'Today' : date == Date.yesterday ? 'Yesterday' : date.strftime("%d %b %Y") %>
          </h6>
          <div>
             <%= render transactions %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

